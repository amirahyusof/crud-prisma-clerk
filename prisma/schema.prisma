generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("MySQL_PRISMA_URL")
  directUrl =  env("MYSQL_URL_NON_POOLING")
}



model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id Int @id @default(autoincrement())
  name String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  category Category @relation(fields: [categoryId], references: [id])
  categoryId Int
}

model Category {
  id Int @id @default(autoincrement())
  name String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  products Product[]
  creator String?
}
